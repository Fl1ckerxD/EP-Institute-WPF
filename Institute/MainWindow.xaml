<Window x:Class="Institute.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Institute"
        mc:Ignorable="d"
        Title="Моя программа" Height="450" Width="800" MinHeight="450" MinWidth="800" LayoutUpdated="Window_LayoutUpdated">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#03899C">
            <Image Source="Resources/college.png" HorizontalAlignment="Left"/>
            <TextBlock Text="Title" FontSize="35" Margin="20,0,0,0" />
        </StackPanel>
        <Button x:Name="b_back" Grid.Row="0" Content="Назад" Style="{StaticResource ResourceKey=MainButton}" Width="75" Height="35" HorizontalAlignment="Right" Margin="0,0,15,0" Click="b_back_Click"/>
        <Frame x:Name="winFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
