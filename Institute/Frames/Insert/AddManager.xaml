        <TextBox x:Name="tb_patronymic" Width="150" Height="30" Margin="297,196,345,143" />
        <TextBlock Text="Отчество:" TextAlignment="Right" Width="60" Height="20" Margin="232,201,500,148" />

        <ComboBox x:Name="cb_rank" DisplayMemberPath="Название" SelectedValuePath="IdЗвание" Width="80" Height="30" Margin="470,155,242,184"/>
