<Page x:Class="Institute.Frames.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Institute.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="369" d:DesignWidth="792"
      Title="Главное меню">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="b_Speciality" Content="Специальности" Style="{StaticResource MainButton}" Width="160" Margin="0,0,0,10" Click="b_Speciality_Click"/>
            <Button x:Name="b_Department" Content="Кафедры" Style="{StaticResource MainButton}" Width="160"  Margin="0,0,0,10" Click="b_Department_Click"/>
            <Button x:Name="b_Discipline" Content="Учебный план" Style="{StaticResource MainButton}" Width="160"  Margin="0,0,0,10" Click="b_Discipline_Click"/>
            <Button x:Name="b_Manager" Content="Зав. кафедрой" Style="{StaticResource MainButton}" Width="160"  Margin="0,0,0,10" Click="b_Manager_Click"/>
        </StackPanel>
    </Grid>
</Page>
